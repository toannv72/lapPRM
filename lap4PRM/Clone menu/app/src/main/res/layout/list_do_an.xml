<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/cavien"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toStartOf="@+id/slcavien"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bundau"
        android:contentDescription="Cá viên chiên"
        app:srcCompat="@drawable/cavien" />

    <ImageView
        android:id="@+id/bundau"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/slbundau"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bunbo"
        android:contentDescription="Bún đậu mếm tôm"
        app:srcCompat="@drawable/bundau" />

    <ImageView
        android:id="@+id/bunbo"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/slbunbo"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banhxeo"
        android:contentDescription="Bún bòa huế"
        app:srcCompat="@drawable/bunbo" />

    <ImageView
        android:id="@+id/banhxeo"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:background="#00D66B6B"
        app:layout_constraintEnd_toStartOf="@+id/slbanhxeo"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Bánh xèo"

        app:srcCompat="@drawable/banhxeo" />

    <EditText
        android:id="@+id/slbanhxeo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="44dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"/>


    <EditText
        android:id="@+id/slbunbo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slbanhxeo"
        android:inputType="number"/>

    <EditText
        android:id="@+id/slbundau"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/slbunbo" />


    <EditText
        android:id="@+id/slcavien"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/slbundau" />

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Đặt món"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cavien" />

    <Button
        android:id="@+id/cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Cancle"
        app:layout_constraintEnd_toStartOf="@+id/order"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cavien" />

    <TextView
        android:id="@+id/gbanhxeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="50000"
        app:layout_constraintEnd_toStartOf="@+id/slbanhxeo"
        app:layout_constraintStart_toEndOf="@+id/banhxeo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gbunbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="60000"
        app:layout_constraintEnd_toStartOf="@+id/slbunbo"
        app:layout_constraintStart_toEndOf="@+id/bunbo"
        app:layout_constraintTop_toBottomOf="@+id/gbanhxeo" />

    <TextView
        android:id="@+id/gbundau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="90000"
        app:layout_constraintEnd_toStartOf="@+id/slbundau"
        app:layout_constraintStart_toEndOf="@+id/bundau"
        app:layout_constraintTop_toBottomOf="@+id/gbunbo" />

    <TextView
        android:id="@+id/gcavien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="50000"
        app:layout_constraintEnd_toStartOf="@+id/slcavien"
        app:layout_constraintStart_toEndOf="@+id/cavien"
        app:layout_constraintTop_toBottomOf="@+id/gbundau" />


</androidx.constraintlayout.widget.ConstraintLayout>