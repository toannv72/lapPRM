<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/bia"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="44dp"
        android:contentDescription="Bia"
        app:layout_constraintEnd_toStartOf="@+id/slbia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trasua"
        app:srcCompat="@drawable/bia" />

    <ImageView
        android:id="@+id/coca"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@+id/slcoca"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Coca"
        app:srcCompat="@drawable/coca" />

    <ImageView
        android:id="@+id/nuocsuoi"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/slnuocsuoi"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coca"
        android:contentDescription="Nước Suôi"
        app:srcCompat="@drawable/nuocsuoi" />

    <ImageView
        android:id="@+id/trasua"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/sltrasua"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuocsuoi"
        android:contentDescription="Trà Sữa"
        app:srcCompat="@drawable/trasua" />

    <EditText
        android:id="@+id/slcoca"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/slnuocsuoi"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slcoca" />

    <EditText
        android:id="@+id/sltrasua"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slnuocsuoi" />


    <EditText
        android:id="@+id/slbia"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sltrasua" />

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Đặt món"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bia" />

    <Button
        android:id="@+id/cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Cancle"
        app:layout_constraintEnd_toStartOf="@+id/order"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bia" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="10.000đ"
        app:layout_constraintEnd_toStartOf="@+id/slcoca"
        app:layout_constraintStart_toEndOf="@+id/coca"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="15.000đ"
        app:layout_constraintEnd_toStartOf="@+id/slnuocsuoi"
        app:layout_constraintStart_toEndOf="@+id/nuocsuoi"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="16.000đ"
        app:layout_constraintEnd_toStartOf="@+id/sltrasua"
        app:layout_constraintStart_toEndOf="@+id/trasua"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="17.000đ"
        app:layout_constraintEnd_toStartOf="@+id/slbia"
        app:layout_constraintStart_toEndOf="@+id/bia"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>