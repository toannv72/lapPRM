<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewedit"
            android:layout_width="101dp"
            android:layout_height="125dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/editTitle"

                android:layout_width="196dp"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="SubjectName"
                android:inputType="text"
                android:text="" />

            <EditText
                android:id="@+id/editDesTile"

                android:layout_width="195dp"
                android:layout_height="76dp"
                android:layout_marginBottom="104dp"
                android:ems="10"
                android:hint="Description Subject"
                android:inputType="text"
                android:text="" />

        </LinearLayout>

        <EditText
            android:id="@+id/editDemuc"

            android:layout_width="109dp"
            android:layout_height="126dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Subject code"
            android:inputType="text"
            android:text="" />

    </LinearLayout>


    <EditText
        android:id="@+id/addLinkImg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Link anh"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:text="" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/addbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:background="#175EB5"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="12dp"
            android:text="Add"
            />

        <TextView
            android:id="@+id/deletebtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="12dp"
            android:background="#F4043C"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Delete" />

        <TextView
            android:id="@+id/editbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#17B52C"
            android:gravity="center"
            android:textColor="#fff"
            android:text="edit"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUser"

        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_marginBottom="5dp" />


</LinearLayout>